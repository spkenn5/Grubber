<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" >
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Please select according to your device's compability"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:layout_above="@+id/LLNavAR"/>
        <LinearLayout
            android:id="@+id/LLNavAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnAR"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/logo_ar" />

            <Button
                android:id="@+id/btnNonAR"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/logo_nonar" />
            
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>